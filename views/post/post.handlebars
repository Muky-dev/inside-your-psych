<div class="card">
    <div class="card-body">
        <h1>{{post.title}}</h1>
        <hr>
        <p style="white-space: pre-line">
            {{{post.content}}}
        </p>
    </div>
</div>

<div class="card mt-5">
    <div class="card-body">
        <form action="/post/{{post.slug}}/newComment" method="POST">

            <label for="content">Add a comment...</label>
            <input class="form-control" name="content" type="text">

            <button class="btn btn-primary mt-4" type="submit">Comment</button>
        </form>
    </div>
</div>

{{#each comments}}
<div class="card mt-2 mb-2">

        <div class="card-body">
            {{content}}
        </div>

</div>
{{/each}}
